<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gabg"
    android:id="@id/mainbg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_market"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_market" />

        <Button
            android:id="@+id/btn_inventory"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/btn_market"
            android:background="@drawable/ic_inventory" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/btn_help"
            android:background="@drawable/ic_settings" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_help" />

    </RelativeLayout>

</RelativeLayout>